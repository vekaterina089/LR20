<Window x:Class="WpfApp7.WindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="ООО Ткани" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Наименование"/>
            <TextBox x:Name="NameProd"/>
            <Label Content="Категория"/>
            <ComboBox>
                <TextBlock Text="Постельные ткани"/>
                <TextBlock Text="Детские ткани"/>
                <TextBlock Text="Ткани для изделий"/>
            </ComboBox>
            <Label Content="описание"/>
            <ListBox  Width="500" Height="500"/>
        </StackPanel>
    </Grid>
</Window>
