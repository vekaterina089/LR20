<Page x:Class="WpfApp7.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="/Img/logo.png"/>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Логин" FontSize="20" FontWeight="Black" FontFamily=" Comic Sans MS" />
            <TextBox x:Name="logo" FontFamily=" Comic Sans MS"/>
            <Label Content="Пароль" FontSize="20" FontWeight="Black" FontFamily=" Comic Sans MS" />
            <PasswordBox x:Name="password" FontFamily=" Comic Sans MS"/>
            <Button Content="Войти" Margin="0 10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
